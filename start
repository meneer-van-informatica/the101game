#!/usr/bin/env bash
set -euo pipefail
sudo rm -f /etc/nginx/.OFFLINE
echo "[STAR] OFFLINE vlag verwijderd"
sudo nginx -t && sudo systemctl reload nginx
sleep 0.5
if ! ss -tlnp | grep -q ':443'; then
  echo "[HEAL] :443 niet luistert -> restart nginx"
  sudo systemctl restart nginx
fi
# optioneel: open firewall profielen indien dicht
if command -v ufw >/dev/null 2>&1; then
  sudo ufw allow 'Nginx Full' >/dev/null 2>&1 || true
fi
curl -skI https://localhost/ | head -n1 || true
